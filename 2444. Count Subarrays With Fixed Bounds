class Solution {
public:
    long long countSubarrays(vector<int>& nums, int minK, int maxK) {
        long long ans = 0;
        int min_b = -1, max_b = -1, l = 0;   // _b -> back
        for (int r = 0; r < nums.size(); r++) {
            if (nums[r] > maxK || nums[r] < minK) {
                max_b = -1;
                min_b = -1;
                l = r + 1;
            } else {
                if (nums[r] == maxK) {
                    max_b = r;
                } 
                if (nums[r] == minK) {
                    min_b = r;
                }
                int t = min(max_b, min_b);
                if (t != -1) ans += t - l + 1;
            }
        }
        return ans;
    }
};
// 0ms 93.92MB