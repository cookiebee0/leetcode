class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        ranges::sort(arr);
        int n = arr.size(), mi = INT_MAX;
        for (int i = 0; i + 1 < n; i++) {
            mi = min(arr[i + 1] - arr[i], mi);
        }
        vector<vector<int>> ans;
        for (int i = 0; i + 1 < n; i++) {
            if (arr[i + 1] - arr[i] == mi) {
                ans.push_back({arr[i], arr[i + 1]});
            }
        }
        return ans;
    }
};
// 13ms 36.60MB